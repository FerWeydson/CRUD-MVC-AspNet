@model ProjetoMVC.Models.Contato
@{
    ViewData["Title"] = "Editar contato";
}
<h1>Editar contato</h1>

<div clas="row">
    <div class="col-md-4">
        <form asp-action="editar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                
                    <a asp-action="Index" class="btn btn-dark">Voltar</a>
                 
            </div>
        </form>
    </div>
</div>
</hr>
<br>
